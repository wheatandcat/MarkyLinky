{
  "name": "marky-linky",
  "displayName": "MarkyLinky",
  "version": "0.0.1",
  "description": "URLを保存/削除、Markdownを出力ができるブラウザ拡張。",
  "author": "wheatandcat",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.2.0",
    "@plasmohq/storage": "^1.5.0",
    "plasmo": "0.69.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toggle-dark-mode": "^1.1.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.227",
    "@types/node": "18.15.11",
    "@types/react": "18.0.32",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "prettier": "2.8.7",
    "rome": "12.0.0",
    "tailwindcss": "^3.3.1",
    "typescript": "5.0.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "scripting",
      "action",
      "storage",
      "tabs",
      "contextMenus",
      "contextMenus.onClicked.addListener"
    ]
  }
}
